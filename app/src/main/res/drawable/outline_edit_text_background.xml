<!-- res/drawable/outline_edit_text_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="1dp"
                android:color="#D3D3D3" /> <!-- Change color and width as needed -->
            <corners android:radius="8dp" /> <!-- Adjust corner radius as needed -->
            <padding
                android:left="8dp"
                android:top="8dp"
                android:right="8dp"
                android:bottom="8dp" />
        </shape>
    </item>
</selector>
